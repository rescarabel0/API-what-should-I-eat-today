<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PersonalPlate</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <style>
      body {
        height: 100vh;
        font-family: Arial, Helvetica, sans-serif;
        background-color: bisque;
      }

      img {
        width: 100px;
        height: 100px;
      }

      .container {
        height: calc(100% - 100px);
      }

      .left-col {
        border-right: 1px solid black;
        padding-right: 10px;
      }

      p.label {
        font-weight: 600;
      }

      .checkboxes {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }

      .error {
        color: red;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <img src="https://i.ibb.co/hM0gsmZ/logo.png" alt="" />
    <div class="container">
      <form method="POST" class="h-100" action="/user/sign">
        <div class="row align-items-center h-100">
          <div class="col-6 left-col">
            <div class="mb-3 form-floating">
              <input
                class="form-control"
                type="text"
                id="user"
                name="user"
                placeholder="johndoe"
                required
              />
              <label for="user">User</label>
            </div>
            <div class="mb-3 form-floating">
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                placeholder="johndoe"
                required
              />
              <label for="password">Password</label>
            </div>

            <div class="mb-3">
              <label for="dislikes">Disliked ingredients: </label>
              <textarea
                class="form-control"
                name="dislikes"
                id="dislikes"
                placeholder="Separate each ingredient with commas"
                style="height: 300px"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Sign Up</button>

            <% if (params.error) {%>
            <span class="error"><%=params.error%></span>
            <%}%>
          </div>
          <div class="col-6">
            <!-- <hr /> -->
            <div class="checkboxes">
              <p class="label">Diets:</p>
              <% params.diets.forEach(diet => { %>
              <span class="form-check"
                ><input
                  class="form-check-input"
                  type="checkbox"
                  id="checkbox_<%=diet%>"
                  value="<%=diet.toLowerCase()%>"
                  name="diets"
                />
                <label class="form-check-label" for="checkbox_<%=diet%>"
                  ><%=diet%></label
                ></span
              >
              <% }); %>
            </div>
            <!-- <hr /> -->
            <div class="checkboxes mb-4">
              <p class="label">Intolerances:</p>
              <% params.intolerances.forEach(intolerance => { %>
              <span class="form-check"
                ><input
                  class="form-check-input"
                  type="checkbox"
                  value="<%=intolerance.toLowerCase()%>"
                  name="intolerances"
                  id="checkbox_<%=intolerance%>"
                />
                <label class="form-check-label" for="checkbox_<%=intolerance%>"
                  ><%=intolerance%></label
                ></span
              >
              <% }); %>
            </div>
            <!-- <hr /> -->
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
